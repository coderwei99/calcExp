{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}